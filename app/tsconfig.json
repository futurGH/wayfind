{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "bundler",

		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,

		"jsx": "react-jsx"
	},
	"include": [
		"src"
	],
	"exclude": ["node_modules", "dist", "public"]
}
